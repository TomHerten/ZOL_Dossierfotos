<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#00B1C3</item>
        <item name="colorPrimaryDark">#333333</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- AlertDialog theme. -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <!-- Style for the buttons of the AlertDialog. -->
    <style name="DialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- AlertDialog loading theme. -->
    <style name="AlertDialogThemeLoading" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- SplashScreen theme for cold startups of the app. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
